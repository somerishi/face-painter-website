---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blog - Rainbow Faces">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <h1 class="font-display text-5xl md:text-6xl text-center gradient-text mb-4">Our Blog</h1>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-2xl mx-auto">
        Tips, tricks, and stories from our face painting adventures
      </p>

      <div class="max-w-4xl mx-auto space-y-8">
        {allPosts.map((post) => (
          <article class="card group hover:shadow-2xl transition-shadow">
            <div class="md:flex">
              {post.data.image && (
                <div class="md:w-1/3">
                  <a href={`/blog/${post.slug}`}>
                    <img 
                      src={post.data.image} 
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  </a>
                </div>
              )}
              <div class={`p-6 ${post.data.image ? 'md:w-2/3' : 'w-full'}`}>
                <time class="text-sm text-primary-pink font-semibold">
                  {post.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
                
                <h2 class="font-heading text-2xl md:text-3xl mt-2 mb-3">
                  <a 
                    href={`/blog/${post.slug}`} 
                    class="hover:text-primary-pink transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                
                <p class="text-gray-600 mb-4">{post.data.description}</p>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.map((tag) => (
                      <span class="px-3 py-1 text-xs font-semibold bg-primary-purple/20 text-primary-purple rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                
                <a 
                  href={`/blog/${post.slug}`} 
                  class="inline-flex items-center text-primary-pink font-semibold hover:underline"
                >
                  Read More 
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {allPosts.length === 0 && (
        <div class="text-center py-20">
          <p class="text-xl text-gray-500">No blog posts yet. Check back soon for tips and stories!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
